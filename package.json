{
  "name": "battlecards",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start:server:prod": "node apps/server/dist/index.js",
    "build": "turbo run build",
    "build:extension": "turbo build --filter=extension",
    "build:server": "turbo build --filter=server",
    "docker": "turbo prune --scope='server' --docker",
    "package:extension": "turbo package --filter=extension",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "prettier:format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prettier:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "author": "abbeal",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@9.6.6",
  "devDependencies": {
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "turbo": "^1.9.3",
    "prettier-plugin-organize-imports": "^3.2.2"
  }
}
